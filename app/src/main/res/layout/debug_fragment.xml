<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DebugFragment">

    <TextView
        android:id="@+id/choose_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:labelFor="@id/area_popup"
        android:text="@string/choose_area"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/area_popup"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:contentDescription="@string/choose_area"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/choose_area" />

    <TextView
        android:id="@+id/choose_zone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:labelFor="@id/zone_popup"
        android:text="@string/choose_zone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/area_popup" />

    <Spinner
        android:id="@+id/zone_popup"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:contentDescription="@string/choose_zone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/choose_zone" />

    <TextView
        android:id="@+id/debugText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="@string/loading"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/zone_popup" />

</androidx.constraintlayout.widget.ConstraintLayout>